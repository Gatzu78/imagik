<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SideBarController"
            prefHeight="600.0" prefWidth="400.0"
            fx:id="anchorPane" >

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ToolBar>
            <Button text="Open" onAction="#selectFolder" minWidth="-Infinity" />

            <Pane prefWidth="20.0" HBox.hgrow="SOMETIMES" />

            <TextField fx:id="searchField" promptText="Search..." />
        </ToolBar>
        <ToolBar>
            <Label fx:id="folderName"/>
        </ToolBar>

        <SplitPane orientation="VERTICAL" >
            <fx:include source="Thumbnail.fxml"  />
            <fx:include source="Metadata.fxml"  />
        </SplitPane>
    </VBox>


</AnchorPane>
